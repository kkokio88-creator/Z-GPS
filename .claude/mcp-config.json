{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "description": "파일 시스템 접근",
      "permissions": ["read", "write", "execute"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub API 통합",
      "permissions": ["read", "write"],
      "features": [
        "create-issue",
        "create-pr",
        "search-code",
        "get-file-contents"
      ]
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "웹 검색 기능",
      "permissions": ["read"],
      "useCases": [
        "기술 문서 검색",
        "에러 해결책 찾기",
        "라이브러리 문서 조회"
      ]
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${DB_URL}"
      },
      "description": "데이터베이스 접근 (향후 확장용)",
      "permissions": ["read", "write"],
      "enabled": false
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_TOKEN}"
      },
      "description": "Slack 알림 및 통신",
      "permissions": ["read", "write"],
      "enabled": false,
      "features": [
        "send-message",
        "read-channel",
        "upload-file"
      ]
    },
    "google-drive": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-gdrive"],
      "description": "Google Drive 문서 관리",
      "permissions": ["read", "write"],
      "enabled": false,
      "features": [
        "read-docs",
        "write-docs",
        "share-links"
      ]
    }
  },
  "toolPermissions": {
    "filesystem": {
      "allowedPaths": [
        ".",
        "components/**",
        "services/**",
        "docs/**",
        ".claude/**"
      ],
      "deniedPaths": [
        "node_modules/**",
        ".env*",
        ".git/**"
      ],
      "operations": {
        "read": "allowed",
        "write": "allowed",
        "delete": "prompt",
        "execute": "prompt"
      }
    },
    "github": {
      "repositories": [
        "kkokio88-creator/Z-GPS"
      ],
      "operations": {
        "read": "allowed",
        "write": "allowed",
        "admin": "denied"
      }
    },
    "web": {
      "allowedDomains": [
        "github.com",
        "stackoverflow.com",
        "react.dev",
        "vitejs.dev",
        "typescriptlang.org",
        "google.com",
        "npmjs.com"
      ],
      "operations": {
        "search": "allowed",
        "fetch": "allowed"
      }
    }
  },
  "integrations": {
    "vscode": {
      "enabled": true,
      "extensions": [
        "eslint",
        "prettier",
        "typescript"
      ],
      "commands": {
        "formatDocument": "allowed",
        "organizeImports": "allowed",
        "fixAll": "allowed"
      }
    },
    "git": {
      "enabled": true,
      "hooks": {
        "pre-commit": true,
        "pre-push": true,
        "post-commit": false
      },
      "autoStaging": false,
      "signCommits": false
    },
    "npm": {
      "enabled": true,
      "commands": {
        "install": "allowed",
        "update": "prompt",
        "uninstall": "prompt",
        "run": "allowed"
      }
    }
  },
  "security": {
    "apiKeys": {
      "location": ".env.local",
      "neverCommit": true,
      "validation": "strict"
    },
    "sensitivePatterns": [
      "password",
      "secret",
      "token",
      "api_key",
      "private_key"
    ],
    "autoBlock": {
      "hardcodedSecrets": true,
      "envFileCommits": true,
      "suspiciousCommands": true
    }
  },
  "notifications": {
    "channels": ["console", "file"],
    "events": {
      "taskComplete": true,
      "errorOccurred": true,
      "securityAlert": true,
      "buildComplete": true
    },
    "logFile": ".claude/logs/notifications.log"
  }
}
